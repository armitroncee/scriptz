<!-- Main Title -->
<div class="jumbotron">
  <h1 class="display-3">View &amp; Manage Medications</h1>
  <p class="lead"></p>
  <hr class="my-4">
</div>

<!-- Medication Table -->
<table class="table table-hover">
    <thead>
        <tr>
          <th scope="col">Medication</th>
          <th scope="col">Dose</th>
          <th scope="col">When</th>
          <th scope="col">Pills Remaning</th>
          <th scope="col">Deactivate Medication</th>
        </tr>
    </thead>
        <tbody>
            {{#each scriptz}}
            <tr class="table-secondary">
              <th scope="row">{{this.prescription_name}}</th>
              <td>{{this.dose}} mg</td>
              <td>{{this.TimeFrame}}</td>
              <td>{{this.Pills_Remaining}}</td>
              <td><button data-id="{{id}}" id="deactivate">Deactivate</button></td>
            </tr>
            {{/each}}
        </tbody>
</table> 

<!-- The pill entry form  -->
<form action="/api/scriptz" method="POST">
  <fieldset>
    <legend>Add Medications </legend>

    <div class="form-group">
        <label for="medicationName">Medication Name</label>
        <textarea class="form-control" id="medName" name="prescription_name" rows="1"></textarea>
    </div>

     <div class="form-group">
        <label for="dose">Dose</label>
        <textarea class="form-control" id="medDose" name="dose" rows="1"></textarea>
    </div>

     <div class="form-group">
        <label for="pillsremaining">Pills Remaining</label>
        <textarea class="form-control" id="medPills" name="Pills_Remaining" rows="1"></textarea>
    </div>

    <div class="form-group">
      <label for="whenToTake">When (please select all times for this medication)</label>
      <select multiple class="form-control" id="medTime" name="TimeFrame">
        <option value="Morning">Morning</option>
        <option value="Lunch">Lunch Time</option>
        <option value="Dinner">Dinner Time</option>
        <option value="Bed Time">Bed Time</option>
      </select>
    </div>
                  
<!-- Submit Button -->
    <button type="submit" class="btn btn-primary" id="submit">Submit</button>
  </fieldset>
</form>

